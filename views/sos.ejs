<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emergency SOS</title>
    <link rel="stylesheet" href="../assets/css/sos.css">

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sos-section {
            padding: 50px 0;
        }

        .sos-card {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .section-title {
            text-align: center;
            margin-bottom: 30px;
        }

        .button-group {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-bottom: 20px;
        }

        .sos-button {
            padding: 15px 25px;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .sos-button.danger {
            background-color: #e74c3c;
            color: white;
        }

        .sos-button.safe {
            background-color: #2ecc71;
            color: white;
        }

        .sos-button:hover {
            opacity: 0.9;
        }

        .message-area {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 16px;
            margin-bottom: 15px;
            resize: vertical;
        }

        .btn-block {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        .btn-block:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <%- include("partials/header") %>

    <!-- SOS Page -->
    <div id="sos-page" class="page">
        <section class="section sos-section">
            <div class="container">
                <div class="section-title">
                    <h2>Emergency SOS</h2>
                    <p>Quickly request help during emergencies. Your location will be shared with your emergency contact.</p>
                </div>
                
                <div class="sos-card">
                    <div class="button-group">
                        <button class="sos-button danger" id="sos-emergency">üö® SOS</button>
                        <button class="sos-button safe" id="safe-message">‚úÖ I'm Safe</button>
                    </div>
                    
                    <p>Press the SOS button to send an emergency alert with your current location.</p>
                    
                    <div class="send-message">
                        <h3>Include Additional Information</h3>
                        <textarea class="message-area" id="sos-message" placeholder="Describe your situation..."></textarea>
                        <button class="btn btn-block" id="send-sos-message">Send Message with Location</button>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include("partials/footer") %>

    <script>
        document.getElementById("sos-emergency").addEventListener("click", sendSOSAlert);
        document.getElementById("send-sos-message").addEventListener("click", sendSOSAlert);
        document.getElementById("safe-message").addEventListener("click", sendSafeAlert);
    
        async function sendSOSAlert() {
            if (!navigator.geolocation) {
                alert("‚ö†Ô∏è Geolocation is not supported by your browser.");
                return;
            }
    
            navigator.geolocation.getCurrentPosition(async (position) => {
                const latitude = position.coords.latitude;
                const longitude = position.coords.longitude;
                const message = document.getElementById("sos-message").value || "üö® Emergency! Need help!";
                const token = localStorage.getItem("token");
    
                if (!token) {
                    alert("‚ö†Ô∏è No authentication token found. Please log in again.");
                    window.location.href = "/login";
                    return;
                }
    
                try {
                    const response = await fetch("/api/sos", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            "Authorization": `Bearer ${token}`,
                        },
                        body: JSON.stringify({ latitude, longitude, message }),
                    });
    
                    const data = await response.json();
                    if (response.ok) {
                        alert("üö® SOS alert sent successfully!");
                        document.getElementById("sos-message").value = ""; // Clear textarea
                    } else {
                        alert("‚ö†Ô∏è Failed to send SOS alert: " + data.message);
                    }
                } catch (error) {
                    console.error("‚ùå Error sending SOS request:", error);
                    alert("‚ùå An error occurred while sending the SOS request.");
                }
            }, () => {
                alert("‚ö†Ô∏è Unable to retrieve your location.");
            });
        }
    
        async function sendSafeAlert() {
    if (!navigator.geolocation) {
        alert("‚ö†Ô∏è Geolocation is not supported by your browser.");
        return;
    }

    navigator.geolocation.getCurrentPosition(async (position) => {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        const message = "‚úÖ I am safe now. No help needed.";
        const token = localStorage.getItem("token");

        if (!token) {
            alert("‚ö†Ô∏è No authentication token found. Please log in again.");
            window.location.href = "/login";
            return;
        }

        try {
            const response = await fetch("/api/sos", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "Authorization": `Bearer ${token}`,
                },
                body: JSON.stringify({ latitude, longitude, message }),
            });

            const data = await response.json();
            if (response.ok) {
                alert("‚úÖ Safe status sent successfully!");
            } else {
                alert("‚ö†Ô∏è Failed to send message: " + data.message);
            }
        } catch (error) {
            console.error("‚ùå Error sending safe message:", error);
            alert("‚ùå An error occurred while sending the safe message.");
        }
    }, () => {
        alert("‚ö†Ô∏è Unable to retrieve your location.");
    });
}

    </script>
    

</body>
</html>
