<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="../assets/css/profile.css">
</head>
<body>

    <%- include("partials/header.ejs") %>

    <!-- Profile Page -->
    <div id="profile-page" class="page" >
        <section class="section">
            <div class="container">
                <div class="section-title">
                    <h2>My Profile</h2>
                    <p>Manage your account settings and emergency contacts.</p>
                </div>
                
                <div class="profile-container">
                    <div class="profile-sidebar">
                        
                        <div class="profile-info">
                            <h2 id="profile-name">John Doe</h2>
                            <p id="profile-email">john.doe@example.com</p>
                        </div>
                        <ul class="profile-menu">
                            <li><a href="#" class="active" data-tab="personal">Personal Information</a></li>
                            <li><a href="#" data-tab="emergency">Emergency Contacts</a></li>
                            <li><a href="#" data-tab="settings">Account Settings</a></li>
                        </ul>
                    </div>
                    
                    <div class="profile-content">
                        <!-- Personal Information Tab -->
                        <div class="profile-tab" id="personal-tab">
                            <h3>Personal Information</h3>
                            <form id="personal-form">
                                <div class="form-group">
                                    <label for="profile-full-name">Full Name</label>
                                    <input type="text" id="profile-full-name" class="form-control" value="John Doe">
                                </div>
                                <div class="form-group">
                                    <label for="profile-phone">Phone Number</label>
                                    <input type="tel" id="profile-phone" class="form-control" value="+1 (555) 123-4567">
                                </div>
                                <div class="form-group">
                                    <label for="profile-address">Home Address</label>
                                    <input type="text" id="profile-address" class="form-control" value="123 Main St, Anytown, USA">
                                </div>
                                <div class="form-group">
                                    <label for="profile-medical">Medical Information (Optional)</label>
                                    <textarea id="profile-medical" class="form-control" placeholder="Enter any relevant medical information"></textarea>
                                </div>
                                <button type="submit" class="btn">Save Changes</button>
                            </form>
                        </div>
                        
                        <!-- Emergency Contacts Tab -->
                        <div class="profile-tab" id="emergency-tab" style="display: none;">
                            <h3>Emergency Contacts</h3>
                            <div id="emergency-contacts">
                                <div class="form-group">
                                    <label>Contact 1</label>
                                    <input type="text" class="form-control" placeholder="Name" value="Jane Doe">
                                    <input type="tel" class="form-control" placeholder="Phone Number" value="+1 (555) 987-6543" style="margin-top: 10px;">
                                    <input type="email" class="form-control" placeholder="Email" value="jane.doe@example.com" style="margin-top: 10px;">
                                </div>
                                <div class="form-group">
                                    <label>Contact 2</label>
                                    <input type="text" class="form-control" placeholder="Name">
                                    <input type="tel" class="form-control" placeholder="Phone Number" style="margin-top: 10px;">
                                    <input type="email" class="form-control" placeholder="Email" style="margin-top: 10px;">
                                </div>
                            </div>
                            <button id="add-contact" class="btn">Add Contact</button>
                            <button id="save-contacts" class="btn" style="margin-left: 10px;">Save Changes</button>
                        </div>
                        
                        <!-- Account Settings Tab -->
                        <div class="profile-tab" id="settings-tab" style="display: none;">
                            <h3>Account Settings</h3>
                            <form id="settings-form">
                                <div class="form-group">
                                    <label for="settings-email">Email Address</label>
                                    <input type="email" id="settings-email" class="form-control" value="john.doe@example.com">
                                </div>
                                <div class="form-group">
                                    <label for="settings-password">Change Password</label>
                                    <input type="password" id="settings-password" class="form-control" placeholder="Enter new password">
                                </div>
                                <div class="form-group">
                                    <label for="settings-confirm">Confirm New Password</label>
                                    <input type="password" id="settings-confirm" class="form-control" placeholder="Confirm new password">
                                </div>
                                <div class="form-group">
                                    <label>Notification Preferences</label>
                                    <div class="checkbox-group">
                                        <input type="checkbox" id="notify-email" checked>
                                        <label for="notify-email">Email Notifications</label>
                                    </div>
                                    <div class="checkbox-group">
                                        <input type="checkbox" id="notify-sms" checked>
                                        <label for="notify-sms">SMS Notifications</label>
                                    </div>
                                    <div class="checkbox-group">
                                        <input type="checkbox" id="notify-app" checked>
                                        <label for="notify-app">App Notifications</label>
                                    </div>
                                </div>
                                <button type="submit" class="btn">Save Changes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include("partials/footer.ejs") %>
</body>
</html>